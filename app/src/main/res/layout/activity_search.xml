<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Search Bar for entering babysitter name or location -->
    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search babysitters..."
        android:inputType="text"
        android:padding="12dp"
        android:background="@drawable/search_bar_background" />


    <!-- Filter Spinner for selecting experience level -->
    <Spinner
        android:id="@+id/filter_experience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:minHeight="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />


    <!-- RecyclerView for displaying the list of babysitters -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp" />

</LinearLayout>