<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#A3E4DB">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Babysitter Profile"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="@font/dancingscript"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <!-- Email Field (read-only) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textStyle="bold"
        android:paddingStart="10dp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:enabled="false"
        android:backgroundTint="@color/design_default_color_background"
        android:padding="12dp"
        android:hint="Enter your email" />

    <!-- Name Field -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textStyle="bold"
        android:paddingStart="10dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:backgroundTint="@color/design_default_color_background"
        android:padding="12dp"
        android:hint="Enter your name" />

    <!-- Qualifications Field -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Qualifications"
        android:textStyle="bold"
        android:paddingStart="10dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/qualifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:backgroundTint="@color/design_default_color_background"
        android:padding="12dp"
        android:hint="Enter your qualifications" />

    <!-- Experience Field -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Experience"
        android:textStyle="bold"
        android:paddingStart="10dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/experience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:backgroundTint="@color/design_default_color_background"
        android:padding="12dp"
        android:hint="Enter your experience in years" />

    <!-- Hourly Rates Field -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hourly Rates"
        android:textStyle="bold"
        android:paddingStart="10dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/hourly_rates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:backgroundTint="@color/design_default_color_background"
        android:padding="12dp"
        android:hint="Enter your hourly rate" />

    <!-- Location Field -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textStyle="bold"
        android:paddingStart="10dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:backgroundTint="@color/design_default_color_background"
        android:padding="12dp"
        android:hint="Enter your location" />

    <!-- Availability Field -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Availability"
        android:textStyle="bold"
        android:paddingStart="10dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/availability"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:backgroundTint="@color/design_default_color_background"
        android:padding="12dp"
        android:hint="Enter your availability" />

    <!-- Rating Field (read-only) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rating (0 - 10)"
        android:textStyle="bold"
        android:paddingStart="10dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:enabled="false"
        android:backgroundTint="@color/design_default_color_background"
        android:padding="12dp"
        android:hint="Your rating (read-only)" />

    <!-- Review Number Field -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Review Count"
        android:textStyle="bold"
        android:paddingStart="10dp"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <EditText
            android:id="@+id/review_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:enabled="false"
            android:backgroundTint="@color/design_default_color_background"
            android:padding="12dp" />

        <Button
            android:id="@+id/view_reviews_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Reviews"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/purple_500"
            android:padding="12dp"
            android:layout_marginStart="10dp" />
    </LinearLayout>

    <!-- Buttons -->
    <Button
        android:id="@+id/profile_update_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Profile"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/teal_200"
        android:textStyle="bold"
        android:padding="16dp"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/profile_return_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Return"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/red"
        android:textStyle="bold"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp" />

</LinearLayout>

