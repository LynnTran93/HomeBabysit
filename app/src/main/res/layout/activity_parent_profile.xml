<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A3E4DB"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/tvProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parent Profile"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/dancingscript"
            android:textColor="#000000" />

        <!-- Email (Read-Only) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="16sp"
            android:textColor="#757575"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Enter your email"
            android:background="@drawable/edit_text_background"
            android:enabled="false"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp" />

        <!-- Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="16sp"
            android:textColor="#757575"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Enter your name"
            android:background="@drawable/edit_text_background"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp" />

        <!-- Location -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="16sp"
            android:textColor="#757575"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Enter your location"
            android:background="@drawable/edit_text_background"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp" />

        <!-- Number of Children -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Number of Children"
            android:textSize="16sp"
            android:textColor="#757575"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/number_of_children"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Enter number of children"
            android:background="@drawable/edit_text_background"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp" />

        <!-- Babysitter Preferences -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Babysitter Preferences"
            android:textSize="16sp"
            android:textColor="#757575"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/babysitter_preferences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Enter babysitter preferences"
            android:background="@drawable/edit_text_background"
            android:minHeight="48dp"
            android:layout_marginBottom="24dp" />

        <!-- Update Button -->
        <Button
            android:id="@+id/profile_update_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update"
            android:background="@drawable/button_background"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <!-- Return Button -->
        <Button
            android:id="@+id/profile_return_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Return"
            android:background="@drawable/button_background"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>
